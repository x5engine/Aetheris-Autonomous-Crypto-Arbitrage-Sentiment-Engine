{
  "name": "aetheris-protocol",
  "version": "1.1.0",
  "description": "Hybrid AI Trading & Sentiment Engine - VPS + Client Architecture",
  "type": "module",
  "scripts": {
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "engine:install": "cd engine && npm install",
    "engine:dev": "cd engine && npm run dev",
    "setup": "npm run client:install && npm run engine:install",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:hosting": "npm run client:build && firebase deploy --only hosting",
    "deploy": "firebase deploy",
    "verify": "node scripts/verify-setup.js",
    "test:rules": "node scripts/test-firestore-rules.js",
    "vps:create-user": "./scripts/vps-create-user.sh",
    "vps:setup": "./scripts/vps-setup.sh",
    "vps:deploy": "./scripts/vps-deploy.sh",
    "vps:start": "./scripts/vps-start.sh",
    "vps:stop": "./scripts/vps-stop.sh",
    "vps:restart": "./scripts/vps-restart.sh",
    "vps:logs": "./scripts/vps-logs.sh",
    "vps:status": "./scripts/vps-status.sh",
    "vps:upload-secrets": "./scripts/vps-upload-secrets.sh",
    "vps:quick-setup": "./QUICK_SETUP.sh",
    "test:bot": "./scripts/test-bot.sh",
    "test:firestore": "node scripts/test-firestore.js"
  },
  "private": true
}

